//largest number among two using ternary operator
#include<stdio.h>
int main(){
    int x, y;
    printf("Enter the value of x and y:");
    scanf("%d%d",&x,&y);
    (x>y) ? printf("X is largest") : printf("Y is largest");
    return 0;
}
                     OR
//Program to find the largest number among two using if-else statement.
#include<stdio.h>
int main(){
    int x,y;
    printf("Enter the value of X and Y:");
    scanf("%d %d",&x ,&y);
    if(x>y)
        printf("X is largest");
    else
        printf("Y is largest");
    return 0;
}
