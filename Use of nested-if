//Program to check whether a character is vowel using nested if.
#include<stdio.h>
#include<ctype.h>
int main(){
    char ch;
    printf("Enter Character:");
    scanf("%c", &ch);
    if(isalpha(ch)){
        ch = toupper(ch);
        if(ch=='A' || ch=='E' || ch=='I' || ch=='O' || ch=='U'){
            printf("%c is a Vowel",ch);
        }
        else{
            printf("It is not a vowel");
         }
    }     
        else{
            printf("Invalid Input !!!!");
        }
    
}
