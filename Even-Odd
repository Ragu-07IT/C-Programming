//Wap a program to check a number  is even or odd using ternary operator.
#include<stdio.h>
int main(){
    int x ;
    printf("Enter the value of x:");
    scanf("%d",&x);
    (x%2==0) ? printf("X is even number") : printf("X is odd number");
    return 0;
} 


                        OR

//Program to check whether the number is even or odd.
#include<stdio.h>
int main(){
    int num;
    printf("Enter a number:");
    scanf("%d",&num);
    if(num % 2 ==0)
        printf("%d is even number\n",num);
    else
        printf("%d is odd number\n",num);
    
    return 0;
}
