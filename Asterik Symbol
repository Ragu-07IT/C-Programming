//WAP to print Pattern.
#include<stdio.h>
int main(){
    int num;
    printf("Enter the value of N:");
    scanf("%d",&num);
    for(int row=1;row<=num;row++){
        for(int column=1;column<=row;column++){
            printf("*");
        }
        printf("\n");

    }
    return 0;
}
                             OR
#include<stdio.h>
int main(){
    int n;
    printf("Enter the number:");
    scanf("%d",&n);
    for(int i=1;i<=n;i++){
        for(int j=1;j<=n-i;j++){
            printf(" ");
        }

        for(int j=1;j<=i;j++){
            printf("*");
        }
        printf("\n");
    }
    return 0;
}
