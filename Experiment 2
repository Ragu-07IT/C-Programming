//Wap to calculate the area and parameters of circle,square and rectangle.
#include<stdio.h>
int main(){
    float r,area,parameters ;
    printf("Enter the value of radius=");
    scanf("%f",&r);
    area=3.14*r*r;
    parameters=2*3.14*r;
    printf("The area and parameter of circle is=%f,%f",area,parameters);
        
    int a,b,c,d;
    printf("\nEnter the value of length=");
    scanf("%d",&a);
    printf("Enter the value of width=");
    scanf("%d",&b);
    c=a*b;
    d=2*(a+b);
    printf("The area and parameters of rectangle is=%d,%d",c,d);

    int e,side,ar,pr;
    printf("\nEnter the value of side=");
    scanf("%d",&e);
    ar=4*e;
    pr=e*e;
    printf("The area and parameters of square is=%d,%d",ar,pr);
}
