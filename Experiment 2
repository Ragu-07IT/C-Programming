//Program for arithmetic operations like addition,subtraction,multiplication,remainder.
#include<stdio.h>
int main(){
    int a, b, sum, subtraction,multiplication,division ;
    printf("Enter the first number=");
    scanf("%d",&a);
    printf("Enter the second number=");
    scanf("%d",&b);
    sum=a+b;
    subtraction=a-b;
    multiplication=a*b;
    division=a/b;
    printf(" the result of two numbers are=%d,%d,%d,%d",sum,subtraction,multiplication,division);
    return 0;
}
