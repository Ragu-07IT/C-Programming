//Program to find the Euclidean distance between two points.
#include<stdio.h>
#include<math.h>
int main(){
float x1,x2,y1,y2,distance;
printf("Enter the value of X coordinates(x1,x2)=");
scanf("%f%f",&x1,&x2);
printf("Enter the value of Y coordinates(y1,y2)=");
scanf("%f%f",&y1, &y2);
distance=sqrt(pow(x2-x1,2)+(pow(y2-y1,2)));
printf("The distance btw two points is=%f,",distance);
return 0;
}
